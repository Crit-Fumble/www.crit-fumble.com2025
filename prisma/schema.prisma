// Prisma schema for Crit-Fumble Website
// Minimal schema for auth.js + wiki functionality

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Auth.js Required Models
// ============================================================================

// User - Simplified user model for auth.js
// Admin/Owner status determined by env vars (ADMIN_DISCORD_IDS, OWNER_DISCORD_IDS)
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Auth.js relations
  accounts Account[]
  sessions Session[]

  // Wiki relations
  authoredPages   WikiPage[]         @relation("AuthoredPages")
  lastEditedPages WikiPage[]         @relation("LastEditedPages")
  pageRevisions   WikiPageRevision[]

  @@map("users")
}

// Account - OAuth provider accounts (auth.js standard)
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

// Session - User sessions (auth.js standard)
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

// VerificationToken - Email verification (auth.js standard)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// Wiki System
// ============================================================================

// WikiPage - Markdown-based wiki pages
model WikiPage {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Page identification
  slug      String @unique @db.VarChar(200) // URL-friendly identifier (e.g., "getting-started")
  title     String @db.VarChar(200)
  category  String @db.VarChar(100) // For grouping (e.g., "rules", "lore", "guides")
  sortOrder Int    @default(0) @map("sort_order")

  // Content (Markdown)
  content String @db.Text

  // SEO
  description String? @db.Text
  keywords    String? @db.Text

  // Publishing
  isPublished Boolean   @default(false) @map("is_published")
  publishedAt DateTime? @map("published_at")

  // Authorship
  authorId     String @map("author_id")
  author       User   @relation("AuthoredPages", fields: [authorId], references: [id])
  lastEditorId String @map("last_editor_id")
  lastEditor   User   @relation("LastEditedPages", fields: [lastEditorId], references: [id])

  // Revisions
  revisions WikiPageRevision[]

  @@index([category])
  @@index([isPublished])
  @@index([deletedAt])
  @@map("wiki_pages")
}

// WikiPageRevision - Version history for wiki pages
model WikiPageRevision {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  // Reference to page
  pageId String   @map("page_id")
  page   WikiPage @relation(fields: [pageId], references: [id], onDelete: Cascade)

  // Snapshot of content at this revision
  title   String @db.VarChar(200)
  content String @db.Text

  // Who made this revision
  editorId String @map("editor_id")
  editor   User   @relation(fields: [editorId], references: [id])

  // Change description
  changeNote String? @map("change_note") @db.VarChar(500)

  @@index([pageId])
  @@index([createdAt])
  @@map("wiki_page_revisions")
}
