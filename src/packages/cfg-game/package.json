    "rpg",
    "game-mechanics",
    "dnd",
    "cypher-system",
    "foundry-vtt"
  ],
  "author": "Crit-Fumble",
  "license": "MIT",
  "homepage": "https://www.crit-fumble.com",
  "repository": {
    "type": "git",
