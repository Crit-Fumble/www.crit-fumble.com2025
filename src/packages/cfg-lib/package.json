{
  "name": "@crit-fumble/lib",
  "version": "1.0.0",
  "description": "Shared utility library for Crit-Fumble platform - authentication, database helpers, rate limiting, and session management",
  "keywords": [
    "utilities",
    "auth",
    "database",
    "rate-limiting",
    "session-management",
    "prisma",
    "nextauth"
  ],
  "author": "Crit-Fumble",
  "license": "MIT",
  "homepage": "https://www.crit-fumble.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/crit-fumble/crit-fumble.git",
    "directory": "www.crit-fumble.com/src/packages/cfg-lib"
  },
  "bugs": {
    "url": "https://github.com/crit-fumble/crit-fumble/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js",
      "require": "./dist/auth.cjs"
    },
    "./db": {
      "types": "./dist/db.d.ts",
      "import": "./dist/db.js",
      "require": "./dist/db.cjs"
    },
    "./rate-limit": {
      "types": "./dist/rate-limit.d.ts",
      "import": "./dist/rate-limit.js",
      "require": "./dist/rate-limit.cjs"
    },
    "./session-activity": {
      "types": "./dist/session-activity.d.ts",
      "import": "./dist/session-activity.js",
      "require": "./dist/session-activity.cjs"
    },
    "./prisma-adapter": {
      "types": "./dist/prisma-adapter.d.ts",
      "import": "./dist/prisma-adapter.js",
      "require": "./dist/prisma-adapter.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0",
    "next-auth": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "next-auth": "^5.0.0-beta.25",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
