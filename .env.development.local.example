# Local Development Environment using Staging Infrastructure
# Copy to .env.development.local and fill in values from Vercel staging environment

# Vercel Staging URLs
NEXT_PUBLIC_STAGING_URL=https://treefarm22-staging.crit-fumble.com
NEXTAUTH_URL=http://localhost:3000

# Database - Use staging database
DATABASE_URL="<pull-from-vercel-staging>"

# Auth Secret - Use staging secret
AUTH_SECRET="<pull-from-vercel-staging>"

# Email Provider - Resend (STUBBED - Future Implementation)
# RESEND_API_KEY="<your-resend-api-key>"
# RESEND_FROM_EMAIL="noreply@crit-fumble.com"

# Blob Storage - Shared with staging
BLOB_READ_WRITE_TOKEN="<pull-from-vercel-staging>"

# Discord OAuth - Staging App
DISCORD_CLIENT_ID="<staging-discord-app-id>"
DISCORD_CLIENT_SECRET="<staging-discord-app-secret>"

# Discord Admin/Owner IDs - JSON array of Discord user IDs
# Admin IDs have full admin access
DISCORD_ADMIN_IDS='["discord_id1","discord_id2"]'
# Owner IDs are the 4 founders with Core Concepts management access
DISCORD_OWNER_IDS='["discord_id1","discord_id2","discord_id3","discord_id4"]'
# Owner Emails - JSON array of owner emails for Core Concepts access
OWNER_EMAILS='["owner1@crit-fumble.com","owner2@crit-fumble.com","owner3@crit-fumble.com","owner4@crit-fumble.com"]'

# GitHub OAuth - Staging App
GITHUB_ID="<staging-github-app-id>"
GITHUB_SECRET="<staging-github-app-secret>"

# Twitch OAuth - Staging App
TWITCH_CLIENT_ID="<staging-twitch-app-id>"
TWITCH_CLIENT_SECRET="<staging-twitch-app-secret>"

# Battle.net OAuth - Staging App
BATTLENET_CLIENT_ID="<staging-battlenet-app-id>"
BATTLENET_CLIENT_SECRET="<staging-battlenet-app-secret>"
BATTLENET_ISSUER="https://oauth.battle.net"

# Stack Auth - Staging
DB_STACK_SECRET_SERVER_KEY="<staging-stack-key>"
NEXT_PUBLIC_DB_STACK_PROJECT_ID="<staging-stack-project-id>"
NEXT_PUBLIC_DB_STACK_PUBLISHABLE_CLIENT_KEY="<staging-stack-client-key>"

# Development Mode
NODE_ENV=development

# World Anvil Integration
# Get your application key (WORLD_ANVIL_CLIENT_SECRET) from World Anvil
# Users will provide their own User API Tokens when linking accounts
WORLD_ANVIL_CLIENT_SECRET="<your-world-anvil-application-key>"

# ============================================
# Platform Integrations (Stubbed - Optional)
# ============================================
# Steam Integration - Get from: https://steamcommunity.com/dev/apikey
# STEAM_API_KEY="<your-steam-api-key>"

# Fandom Integration - Get from: https://dev.fandom.com
# FANDOM_CLIENT_ID="<your-fandom-client-id>"
# FANDOM_CLIENT_SECRET="<your-fandom-client-secret>"

# Foundry VTT Integration
# FOUNDRY_BRIDGE_URL="http://localhost:30000"
# FOUNDRY_API_TOKEN="<your-foundry-api-token>"
# API_KEY_ENCRYPTION_SECRET="<64-character-hex-string>"  # Generate with: openssl rand -hex 32