{
  "name": "@crit-fumble/ttrpg-core-concepts-bridge-api",
  "version": "0.1.0",
  "description": "Bridge API server for syncing TTRPG game state between Foundry VTT and web applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bridge-server": "dist/standalone.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/standalone.ts",
    "start": "node dist/standalone.js",
    "start:dev": "tsx src/standalone.ts",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "foundry-vtt",
    "ttrpg",
    "bridge",
    "websocket",
    "redis",
    "game-sync"
  ],
  "author": "Crit Fumble Gaming",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.8",
    "@types/cors": "^2.8.16",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "prisma": "^6.1.0"
  },
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  }
}
