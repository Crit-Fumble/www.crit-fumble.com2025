{
  "name": "crit-fumble",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:wiki": "playwright test tests/integration/wiki/ --project=chromium",
    "test:e2e:wiki:headed": "playwright test tests/integration/wiki/ --project=chromium --headed",
    "test:e2e:foundry": "playwright test tests/e2e/foundry-dual-system.spec.ts --project=chromium",
    "test:e2e:foundry:keep": "cross-env KEEP_DROPLET=true playwright test tests/e2e/foundry-dual-system.spec.ts --project=chromium",
    "test:cleanup": "bash scripts/cleanup-nul-files.sh",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:report": "playwright show-report test-results/html-report",
    "capture:ui": "tsx scripts/capture-ui.ts",
    "capture:ui:all-browsers": "tsx scripts/capture-ui.ts all-browsers",
    "capture:ui:mobile": "tsx scripts/capture-ui.ts mobile",
    "capture:ui:tablet": "tsx scripts/capture-ui.ts tablet",
    "capture:all": "playwright test tests/integration/10-login-dashboard-flow.spec.ts --grep=\"Visual Regression\" --project=chromium",
    "playwright:install": "playwright install --with-deps",
    "scales:print": "tsx scripts/generate-print-scales.ts",
    "docker:build": "docker compose build",
    "mcp:build": "docker compose -f docker/docker-compose.test.yml build mcp-server",
    "mcp:up": "docker compose -f docker/docker-compose.test.yml up -d mcp-server",
    "mcp:down": "docker compose -f docker/docker-compose.test.yml stop mcp-server",
    "mcp:logs": "docker compose -f docker/docker-compose.test.yml logs -f mcp-server",
    "mcp:restart": "docker compose -f docker/docker-compose.test.yml restart mcp-server",
    "mcp:start": "cd mcp-server && npm start",
    "env:pull:staging": "vercel env pull .env.development.local --environment=preview",
    "env:pull:prod": "vercel env pull .env.production.local --environment=production",
    "test:staging": "cross-env PLAYWRIGHT_BASE_URL=https://treefarm22-staging.crit-fumble.com playwright test",
    "deploy:staging": "git push origin staging",
    "deploy:prod": "git push origin main",
    "prepare": "node -e \"if (process.env.CI !== 'true' && process.env.VERCEL !== '1') { require('child_process').execSync('husky', {stdio: 'inherit'}) }\"",
    "security:scan": "bash scripts/scan-secrets.sh"
  },
  "dependencies": {
    "@crit-fumble/core": "^7.0.0",
    "@crit-fumble/react": "^19.1.0",
    "@uiw/react-md-editor": "^4.0.8",
    "clsx": "^2.1.1",
    "isomorphic-dompurify": "^2.33.0",
    "next": "^16.0.3",
    "next-auth": "^5.0.0-beta.24",
    "next-themes": "^0.4.6",
    "rate-limiter-flexible": "^8.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.3",
    "ffmpeg-static": "^5.3.0",
    "husky": "^9.1.7",
    "playwright": "^1.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  }
}
